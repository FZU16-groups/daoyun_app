
    <cn.edu.fzu.daoyun_app.CustomToolBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:left_btn_visible="true"
        app:left_btn_src="@mipmap/icon_back"
        app:title_visible="true"
        app:title_text="签到中"
        app:right_tv_visible="true"
        app:right_tv_text="刷新"
        tools:context=".SignInFinishActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/finish_signin_btn"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/finish_button"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="签到人数"/>

                <TextView
                    android:id="@+id/signIn_num_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0人"
                    android:layout_weight="1.0"
                    android:gravity="right"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#D8DDE1"
                android:layout_height="1dp"/>

            <ListView
                android:id="@+id/signedIn_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:background="#D8DDE1"
                android:layout_height="1dp"/>

        </LinearLayout>

    </cn.edu.fzu.daoyun_app.CustomToolBar>
