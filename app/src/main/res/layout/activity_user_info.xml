<?xml version="1.0" encoding="utf-8"?>
<cn.edu.fzu.daoyun_app.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_btn_visible="true"
    app:left_btn_src="@mipmap/icon_back"
    app:title_visible="true"
    app:title_text="用户信息"
    android:background="#f2f4fd"
    tools:context=".UserInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/edit_user_icon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_user_icon_Iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"

                    app:srcCompat="@mipmap/head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name_Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="用户名"
                        android:textColor="#474748"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/user_phone_Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="15606935509"
                        android:textColor="#474748"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:orientation="vertical"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f2f4fd" />

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="用户名"
                    android:textColor="#5b5b5c"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/name_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="未设置"
                    android:textColor="@color/login_other_color"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#D8DDE1"
                android:layout_height="1dp"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="手机号"
                    android:textColor="#5b5b5c"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/usersphone_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="未设置"
                    android:textColor="@color/login_other_color"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#D8DDE1"
                android:layout_height="1dp"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="邮箱"
                    android:textColor="#5b5b5c"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/info_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="未设置"
                    android:textColor="@color/login_other_color" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="创建时间"
                    android:textColor="#5b5b5c"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/create_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:text="2021-04-01"
                    android:textColor="#5b5b5c"
                    android:textSize="18dp" />

            </LinearLayout>

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:background="#D8DDE1"-->
<!--                android:layout_height="1dp"/>-->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="学号/工号"
                    android:textColor="#5b5b5c"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/userid_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:text="200327072"
                    android:textColor="#5b5b5c"
                    android:textSize="18dp" />

            </LinearLayout>

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:background="#D8DDE1"-->
<!--                android:layout_marginBottom="20dp"-->
<!--                android:layout_height="1dp"/>-->

            <Button
                android:id="@+id/save_pas_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="#648bfb"
                android:text="保  存"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </ScrollView>

</cn.edu.fzu.daoyun_app.CustomToolBar>